<?xml version="1.0"?>
<sdf version="1.7">
  <world name="gravity_test">
    <physics type="ode">
      <max_step_size>0.001</max_step_size>
      <real_time_factor>1</real_time_factor>
      <real_time_update_rate>1000</real_time_update_rate>
      <gravity>0 0 -9.8</gravity>
    </physics>

    <!-- Ground plane -->
    <include>
      <uri>model://ground_plane</uri>
    </include>

    <!-- Sun light -->
    <include>
      <uri>model://sun</uri>
    </include>

    <!-- Earth-like gravity test box -->
    <model name="earth_box">
      <pose>0 0 3 0 0 0</pose>
      <static>false</static>
      <link name="link">
        <collision name="collision">
          <geometry>
            <box>
              <size>0.2 0.2 0.2</size>
            </box>
          </geometry>
        </collision>
        <visual name="visual">
          <geometry>
            <box>
              <size>0.2 0.2 0.2</size>
            </box>
          </geometry>
          <material>
            <ambient>1 0 0 1</ambient>
            <diffuse>1 0 0 1</diffuse>
          </material>
        </visual>
        <inertial>
          <mass>0.5</mass>
          <inertia>
            <ixx>0.003333</ixx>
            <ixy>0</ixy>
            <ixz>0</ixz>
            <iyy>0.003333</iyy>
            <iyz>0</iyz>
            <izz>0.003333</izz>
          </inertia>
        </inertial>
      </link>
    </model>

    <!-- Moon-like gravity test box -->
    <model name="moon_box">
      <pose>2 0 3 0 0 0</pose>
      <static>false</static>
      <link name="link">
        <collision name="collision">
          <geometry>
            <box>
              <size>0.2 0.2 0.2</size>
            </box>
          </geometry>
        </collision>
        <visual name="visual">
          <geometry>
            <box>
              <size>0.2 0.2 0.2</size>
            </box>
          </geometry>
          <material>
            <ambient>0 0 1 1</ambient>
            <diffuse>0 0 1</diffuse>
          </material>
        </visual>
        <inertial>
          <mass>0.5</mass>
          <inertia>
            <ixx>0.003333</ixx>
            <ixy>0</ixy>
            <ixz>0</ixz>
            <iyy>0.003333</iyy>
            <iyz>0</iyz>
            <izz>0.003333</izz>
          </inertia>
        </inertial>
      </link>
    </model>
  </world>
</sdf>